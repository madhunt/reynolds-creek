    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            // beamform.py args one bandpass
            "args": ["-p", "-b", "-f", "24", "32", "-x", "TOP07", "-t1", "2023-10-08"],

            // beamform.py args PARALLEL
            //"args": ["-p", "-b", "-F", "0.5", "2", "-x", "TOP07"],

            // testing plotting
            //"args": ["-b", "-f", "24", "32", "-x", "TOP07"],

            // pre-process.py args
            //"args": ["-f", "0.5", "10", "-s", "TOP27,-2", "-s", "TOP43,-2"],
            //"args": [],
            //"args": ["-f", "0.5", "10", "-t1", "2023-10-07", "-t2", "2023-10-08"],
            "env": {"PYDEVD_WARN_EVALUATION_TIMEOUT": "500"}
        }
    ]
}